<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Menambah Kontak</h2>

      <% if (typeof error != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% error.forEach(errors => { %>
          <li><%= errors.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama Lengkap</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="text"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Nama Handphone</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Tambahkan Kontak</button>
      </form>
    </div>
  </div>
</div>
