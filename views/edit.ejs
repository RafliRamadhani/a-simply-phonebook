<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Mengubah Kontak</h2>

      <% if (typeof error != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% error.forEach(errors => { %>
          <li><%= errors.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <input
          type="hidden"
          name="OldName"
          value="<%= contact.OldName || contact.nama %>"
        />

        <div class="mb-3">
          <label for="nama" class="form-label">Nama Lengkap</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="text"
            class="form-control"
            id="email"
            name="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Nama Handphone</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            required
            value="<%= contact.nohp %>"
          />
        </div>
        <button type="submit" class="btn btn-primary">Ubah Kontak</button>
      </form>
    </div>
  </div>
</div>
